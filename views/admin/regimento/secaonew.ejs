<%- include('../../partials/header.ejs') %>
<%- include('../../partials/navbar.ejs') %>
<div class="container">
    <hr>
    <div class="card">
        <div class="card-body">
            <div class="card-header">
                <h2>Adicionar Seção</h2>
            </div>

            <form method="post" action="/admin/secao/new">
                Titulo:
                <select name="id_titulo" class="form-control">
                    <% titulo.forEach((titulo)=> { %>
                        <option value="<%= titulo.id %>" title="<%= titulo.id %>">
                            <%= titulo.titulo %>
                        </option>
                        <% }) %>
                </select>
                Capítulo:
                <select name="id_titulo" class="form-control">
                    <% capitulo.forEach((capitulo)=> { %>
                        <option value="<%= capitulo.id %>" title="<%= capitulo.id %>">
                            <%= capitulo.capitulo %>
                        </option>
                        <% }) %>
                </select>
                Seção:<input class="form-control" type="text" name="secao" placeholder="Seção"><br>
                               

                <button class="btn btn-success">Cadastrar</button>
            </form>
        </div>
    </div>


</div>
        
<%- include('../../partials/footer.ejs') %>