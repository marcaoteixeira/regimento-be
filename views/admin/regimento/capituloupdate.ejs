<%- include('../../partials/header.ejs') %>
<%- include('../../partials/navbar.ejs') %>
<div class="container">
    <hr>
    <div class="card">
        <div class="card-body">
            <div class="card-header">
                <h2>Alterar Capitulo</h2>                
            </div>

            <% capitulo.forEach(capitulo=> { %>
               
            <form method="post" action="/admin/capitulo/save">

                <input type="hidden" name="id" value="<%= capitulo.id %>">
                Capitulo:<input class="form-control" type="text" name="capitulo" value="<%= capitulo.capitulo %>"><br>
                             

                <button class="btn btn-success">Alterar</button>
            </form>
            <% }) %>    
        </div>
    </div>


</div>
        
