<%- include('../../partials/header.ejs') %>
<%- include('../../partials/navbar.ejs') %>
<div class="container">
    <hr>
    <div class="card">
        <div class="card-body">
            <div class="card-header">
                <h2>Alterar Comissão</h2>                
            </div>

            <% comissoes.forEach(comiss=> { %>
               
            <form method="post" action="/admin/comissao/save">

                Comissão:<input class="form-control" type="text" name="comissao" value="<%= comiss.comissao %>"><br>
                Sigla:<input class="form-control" type="text" name="sigla" value="<%= comiss.sigla %>"><br>
                Número de Membros:<input class="form-control" type="number" name="membros"
                value="<%= comiss.membros %>"><br>
               

                <button class="btn btn-success">Alterar</button>
            </form>
            <% }) %>    
        </div>
    </div>


</div>
        
